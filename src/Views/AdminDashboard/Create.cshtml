@model Aaron.Models.ViewModels.CreateBookViewModel;
@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<partial name="~/Views/AdminDashboard/Partials/_TomSelectScripts.cshtml" />
}

<form asp-controller="AdminDashboard" asp-action="Create" method="post" enctype="multipart/form-data">
	@Html.AntiForgeryToken()

	<div class="row mb-3">
		<div class="col-md-6">
			<div class="form-group">
				<label asp-for="Title" class="form-label">عنوان</label>
				<input asp-for="Title" type="text" class="form-control" placeholder="عنوان کتاب را بنویسید"/>
				<span class="text-danger" asp-validation-for="Title"></span>
			</div>
		</div>
		<div class="col-md-6">
			<div>
				<label asp-for="AuthorId" class="form-label">نویسنده</label>
				<select asp-for="AuthorId" asp-items="ViewBag.Authors" class="form-select" multiple>
					<option value=""></option>
				</select>
				<span class="text-danger" asp-validation-for="AuthorId"></span>
			</div>
		</div>
	</div>

	<div class="mb-3">
		<label asp-for="ImageFile" class="form-label" id="ImageFile">تصویر</label>
		<input asp-for="ImageFile" type="file" class="form-control" accept=".jpg,.jpeg,.png" />
		<div class="form-text text-muted">
			حجم فایل نباید بیشتر از ۱ مگابایت باشد. فرمت‌های مجاز: JPG, PNG, JPEG
		</div>
		<span class="text-danger" asp-validation-for="ImageFile"></span>
	</div>

	<div class="mb-3">
		<label asp-for="Summary" class="form-label">خلاصه</label>
		<input asp-for="Summary" type="text" class="form-control" placeholder="خلاصه‌ای کوتاه از کتاب ..."/>
		<span class="text-danger" asp-validation-for="Summary"></span>
	</div>


	<div class="row mb-4">
		<div class="col-md-6">
			<label asp-for="CategoryId" class="form-label">دسته‌بندی</label>
			<select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select" multiple>
				<option value=""></option>
			</select>
			<span class="text-danger" asp-validation-for="CategoryId"></span>
		</div>

		<div class="col-md-6">
			<label asp-for="SelectedTags" class="form-label">برچسب‌ها</label>
			<select asp-for="SelectedTags" asp-items="ViewBag.Tags" class="form-select" multiple></select>
			<span class="text-danger" asp-validation-for="SelectedTags"></span>
		</div>

		<div class="mt-3">
			<label asp-for="Description" class="form-label">توضیحات</label>
			<textarea asp-for="Description" class="form-control" rows="5"></textarea>
			<span class="text-danger" asp-validation-for="Description"></span>
		</div>
	</div>

	<button type="submit" class="btn btn-primary">ارسال</button>
</form>



