@model Aaron.Models.Entities.Book;

@{
	ViewData["Title"] = Model.Slug;
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="pt-4"></div>

<div class="w-100 overflow-hidden" style="max-height: 500px;">
	<img src="@Model.CoverImagePath"
		 class="img-fluid w-100"
		 style="object-fit: cover; height: 100%; max-height: 500px;"
		 alt="@Model.Title" />
</div>

<div class="container py-5">
	<div class="row justify-content-center">
		<div class="col-lg-10">

			<h1 class="mb-3 text-center">@Model.Title</h1>
			<h5 class="text-muted text-center mb-4">نویسنده: @Model.Author.Name</h5>

			@if (!string.IsNullOrWhiteSpace(Model.Summary))
			{
				<p class="lead text-center"><strong>خلاصه:</strong> @Model.Summary</p>
			}

			<hr />

			<h4 class="mb-3">توضیحات</h4>
			<p style="white-space: pre-line;">@Model.Description</p>

			<hr />

			<p>
				<strong>دسته‌بندی:</strong>
				<span class="badge bg-info text-dark">@Model.Category?.Name</span>
			</p>

			<p>
				<strong>برچسب‌ها:</strong>
				@foreach (var tag in Model.Tags)
				{
					<span class="badge bg-secondary me-1">@tag.Name</span>
				}
			</p>

			<div class="d-flex flex-column justify-content-center align-items-center">
				<a class="btn btn-dark mt-4" asp-action="Edit" asp-route-id="@Model.Id">ویرایش کتاب</a>
				<a asp-action="Index" class="btn btn-outline-secondary mt-4">بازگشت به صفحه اصلی</a>
			</div>

		</div>
	</div>
</div>



